@model Usuario

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Cadastro";
}

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<h1>Cadastro Usuario</h1>

<form asp-action="cadastrar" asp-controller="Usuario">

    <div class="mb-3">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="mb-3">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" class="form-control" />
        @Html.ValidationMessageFor(x => x.DataNascimento)
    </div>

    <div class="mb-3">
        <label asp-for="Cpf"></label>
        <input asp-for="Cpf" class="form-control" />
        @Html.ValidationMessageFor(x => x.Cpf)
    </div>

    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="example@example.com" />
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="mb-3">
        <label asp-for="Senha"></label>
        <input asp-for="Senha" class="form-control" />
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button type="submit" class="btn btn-outline-primary">Cadastrar</button>
    <a asp-action="index" asp-controller="Login" class="btn btn-outline-dark">Voltar</a>

</form>